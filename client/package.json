{
  "name": "spl-language-client",
  "description": "VSCode client of the Spl language server",
  "author": "codingkapoor",
  "license": "MIT",
  "publisher": "codingkapoor",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "onLanguage:spl"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "spl",
        "extensions": [
          ".spl",
          ".SPL"
        ]
      }
    ],
    "snippets": [
      {
        "language": "spl",
        "path": "./snippets/spl.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Client configuration",
      "properties": {
        "splLanguageServer.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "splLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the splLanguageServer service."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode-languageclient": "^4.1.3"
  },
  "devDependencies": {
    "vscode": "^1.1.17",
    "@types/node": "10.0.4",
    "typescript": "2.8.3"
  }
}
